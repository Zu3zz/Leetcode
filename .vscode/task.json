{
    "version": "0.1.0",
    "command": "g++", 
    "isShellCommand": true,
    "args": ["-g","${file}","-o","a.out"], 
    "showOutput": "always",
    "problemMatcher": {  
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}
